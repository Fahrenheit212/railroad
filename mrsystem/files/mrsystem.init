#!/bin/sh /etc/rc.common
# Copyright (C) 2015 OpenWrt.org

START=99

start() {
	modprobe sun4i_can
	/usr/sbin/ip link set can0 up type can bitrate 250000

	sleep 2
	nohup drehscheibe &
	sleep 18
	nohup mrcs2eth &
#	mrms1
	nohup mrms2 &
	nohup mrzentrale &
}

stop() {
	killall drehscheibe
	sleep 1
	killall mrcs2eth
#	killall mrms1
	killall mrms2
	killall mrzentrale
}
